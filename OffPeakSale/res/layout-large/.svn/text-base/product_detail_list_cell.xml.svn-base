<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_border"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="0dp" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".75" >

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_centerInParent="true" >
            </ProgressBar>

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_centerInParent="true"
                android:layout_margin="1dip"
                android:background="@null"
                android:scrollbars="none"
                android:visibility="gone" >
            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tvFavProductRelativeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_weight="3"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Title"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Title"
                android:layout_below="@id/tvCategoryName"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/favRatingBar"
                style="@style/FavStarRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvProductName"
                android:max="5"
                android:isIndicator="true"
                android:minHeight="24dp"
                android:numStars="5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/tvFavProductSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/favRatingBar"
                android:text="Size :"
                android:textSize="14sp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/tvOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/favRatingBar"
                android:layout_toRightOf="@id/tvFavProductSize"
                android:text="|"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFavProductRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/favRatingBar"
                android:layout_toRightOf="@id/tvOR"
                android:text="MRP :"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dip"
            android:layout_weight=".75" >

            <Button
                android:id="@+id/deleteProductBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cross" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>